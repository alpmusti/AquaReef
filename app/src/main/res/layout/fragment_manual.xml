<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.Fragment.ManualFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                    android:id="@+id/toggle_manual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:activeBgColor="@android:color/darker_gray"
                    custom:activeTextColor="@android:color/black"
                    custom:cornerRadius="5dp"
                    custom:inactiveBgColor="@android:color/black"
                    custom:inactiveTextColor="@android:color/white"
                    custom:separatorColor="@android:color/darker_gray"
                    custom:textToggleLeft="Manual"
                    custom:textToggleRight="Auto"
                    custom:toggleWidth="82dp"
                    tools:layout_editor_absoluteX="118dp"
                    tools:layout_editor_absoluteY="0dp">

                </belka.us.androidtoggleswitch.widgets.ToggleSwitch>


            </LinearLayout>

            <ImageButton
                android:id="@+id/btnAddFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:drawable/btn_star_big_off"
                android:text="Button" />
            <!--kırmızı-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Kırmızı(660nm)"
                        android:textColor="@android:color/holo_red_dark"
                        android:theme="@style/leftLabelThema" />

                    <SeekBar
                        android:id="@+id/seekBarRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:max="100"
                        android:tag="red"
                        android:progressDrawable="@drawable/seek_bar_progress"
                        android:thumb="@drawable/seek_bar_thumb" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/redValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/gray_very_light"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />

                    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                        android:id="@+id/toggle_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        custom:activeBgColor="@android:color/darker_gray"
                        custom:activeTextColor="@android:color/black"
                        custom:cornerRadius="5dp"
                        custom:inactiveBgColor="@android:color/darker_gray"
                        custom:inactiveTextColor="@android:color/black"
                        custom:separatorColor="@android:color/black"
                        custom:textToggleLeft="-"
                        custom:textToggleRight="+"
                        custom:toggleWidth="40dp" />
                </LinearLayout>

            </LinearLayout>

            <!--yeşil-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Yeşil(530nm)"
                        android:textColor="@android:color/holo_green_dark"
                        android:theme="@style/leftLabelThema" />

                    <SeekBar
                        android:id="@+id/seekBarGreen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progressDrawable="@drawable/seek_bar_progress"
                        android:thumb="@drawable/seek_bar_thumb" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/greenValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/gray_very_light"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                        android:id="@+id/toggle_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        custom:activeBgColor="@android:color/darker_gray"
                        custom:activeTextColor="@android:color/black"
                        custom:cornerRadius="5dp"
                        custom:inactiveBgColor="@android:color/darker_gray"
                        custom:inactiveTextColor="@android:color/black"
                        custom:separatorColor="@android:color/black"
                        custom:textToggleLeft="-"
                        custom:textToggleRight="+"
                        custom:toggleWidth="40dp" />
                </LinearLayout>
            </LinearLayout>

            <!--Royal Blue-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Royal Blue"
                        android:textColor="@color/blue"
                        android:theme="@style/leftLabelThema" />

                    <SeekBar
                        android:id="@+id/seekBarRoyal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progressDrawable="@drawable/seek_bar_progress"
                        android:thumb="@drawable/seek_bar_thumb" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/royalBlueValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/gray_very_light"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                        android:id="@+id/toggle_royal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        custom:activeBgColor="@android:color/darker_gray"
                        custom:activeTextColor="@android:color/black"
                        custom:cornerRadius="5dp"
                        custom:inactiveBgColor="@android:color/darker_gray"
                        custom:inactiveTextColor="@android:color/black"
                        custom:separatorColor="@android:color/black"
                        custom:textToggleLeft="-"
                        custom:textToggleRight="+"
                        custom:toggleWidth="40dp" />
                </LinearLayout>
            </LinearLayout>

            <!--Mavi-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Mavi"
                        android:textColor="@android:color/holo_blue_dark"
                        android:theme="@style/leftLabelThema" />

                    <SeekBar
                        android:id="@+id/seekBarBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progressDrawable="@drawable/seek_bar_progress"
                        android:thumb="@drawable/seek_bar_thumb" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/blueValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/gray_very_light"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                        android:id="@+id/toggle_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        custom:activeBgColor="@android:color/darker_gray"
                        custom:activeTextColor="@android:color/black"
                        custom:cornerRadius="5dp"
                        custom:inactiveBgColor="@android:color/darker_gray"
                        custom:inactiveTextColor="@android:color/black"
                        custom:separatorColor="@android:color/black"
                        custom:textToggleLeft="-"
                        custom:textToggleRight="+"
                        custom:toggleWidth="40dp" />
                </LinearLayout>
            </LinearLayout>

            <!--Beyaz-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Beyaz"
                        android:textColor="@android:color/background_light"
                        android:theme="@style/leftLabelThema" />

                    <SeekBar
                        android:id="@+id/seekBarWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progressDrawable="@drawable/seek_bar_progress"
                        android:thumb="@drawable/seek_bar_thumb" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/whiteValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/gray_very_light"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                        android:id="@+id/toggle_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        custom:activeBgColor="@android:color/darker_gray"
                        custom:activeTextColor="@android:color/black"
                        custom:cornerRadius="5dp"
                        custom:inactiveBgColor="@android:color/darker_gray"
                        custom:inactiveTextColor="@android:color/black"
                        custom:separatorColor="@android:color/black"
                        custom:textToggleLeft="-"
                        custom:textToggleRight="+"
                        custom:toggleWidth="40dp" />
                </LinearLayout>

            </LinearLayout>

            <!--Gün Işığı-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Gün Işığı"
                        android:textColor="@android:color/holo_orange_light"
                        android:theme="@style/leftLabelThema" />

                    <SeekBar
                        android:id="@+id/seekBarLight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progressDrawable="@drawable/seek_bar_progress"
                        android:thumb="@drawable/seek_bar_thumb" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dayLightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/gray_very_light"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                        android:id="@+id/toggle_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        custom:activeBgColor="@android:color/darker_gray"
                        custom:activeTextColor="@android:color/black"
                        custom:cornerRadius="5dp"
                        custom:inactiveBgColor="@android:color/darker_gray"
                        custom:inactiveTextColor="@android:color/black"
                        custom:separatorColor="@android:color/black"
                        custom:textToggleLeft="-"
                        custom:textToggleRight="+"
                        custom:toggleWidth="40dp" />
                </LinearLayout>
            </LinearLayout>

            <!--UV-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="UV"
                        android:textColor="@color/colorAccent"
                        android:theme="@style/leftLabelThema" />

                    <SeekBar
                        android:id="@+id/seekBarUV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progressDrawable="@drawable/seek_bar_progress"
                        android:thumb="@drawable/seek_bar_thumb" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/uvValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/gray_very_light"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="InefficientWeight" />

                    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                        android:id="@+id/toggle_uv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        custom:activeBgColor="@android:color/darker_gray"
                        custom:activeTextColor="@android:color/black"
                        custom:cornerRadius="5dp"
                        custom:inactiveBgColor="@android:color/darker_gray"
                        custom:inactiveTextColor="@android:color/black"
                        custom:separatorColor="@android:color/black"
                        custom:textToggleLeft="-"
                        custom:textToggleRight="+"
                        custom:toggleWidth="40dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
