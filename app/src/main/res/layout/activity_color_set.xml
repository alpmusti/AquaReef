<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/color_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/gray_light"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/color_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="@string/ba_lang_zaman" />

            <TextView
                android:id="@+id/color_txtStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/color_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="@string/cikis_zaman" />

            <TextView
                android:id="@+id/color_txtUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/color_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="@string/inis_zaman" />

            <TextView
                android:id="@+id/color_txtDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/color_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="@string/bitis_zaman" />

            <TextView
                android:id="@+id/color_txtStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/background_light"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:text="@string/parlaklik" />

            <SeekBar
                android:id="@+id/color_seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="90.22"
                android:progressDrawable="@drawable/seek_bar_progress"
                android:thumb="@drawable/seek_bar_thumb"/>

            <TextView
                android:id="@+id/color_texLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="24sp" />

            <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                android:id="@+id/color_toggle_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                custom:activeBgColor="@color/lightGray"
                custom:activeTextColor="@android:color/darker_gray"
                custom:cornerRadius="5dp"
                custom:inactiveBgColor="@color/lightGray"
                custom:inactiveTextColor="@android:color/darker_gray"
                custom:separatorColor="@android:color/black"
                custom:textToggleLeft="@string/eski"
                custom:textToggleRight="@string/arti"
                custom:toggleWidth="40dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/color_lyt_moon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                android:id="@+id/color_toggle_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                custom:activeBgColor="@color/gray"
                custom:activeTextColor="@android:color/white"
                custom:cornerRadius="5dp"
                custom:inactiveBgColor="@color/lightGray"
                custom:inactiveTextColor="@android:color/darker_gray"
                custom:separatorColor="@android:color/black"
                custom:textToggleLeft="@string/royalBlue"
                custom:textToggleRight="@string/mavi"
                custom:toggleWidth="150dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/color_sw_moon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ay_dongusu" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/background_light"
            android:gravity="center_vertical|center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="100">

            <Button
                android:id="@+id/color_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:text="@string/iptal"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/color_btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_dark"
                android:text="@string/tamam"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/color_btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:text="@string/gonder"
                android:textColor="@android:color/background_light" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
