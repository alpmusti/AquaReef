<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--<style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">-->
        <!--//<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch</item>
    </style>
    <style name="seekBarThema" parent="android:Widget.SeekBar">
        <item name="android:layout_weight">1</item>
        <item name="android:progress">@android:color/white</item>
    </style>
    <style name="leftLabelThema" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
